cmake_minimum_required(VERSION 2.8.2)

project(googletest-download NONE)

include(ExternalProject)
message("<googletest-download>/. CMAKE_BINARY_DIR: " ${CMAKE_BINARY_DIR})
message("<googletest-download>/. CMAKE_SOURCE_DIR: " ${CMAKE_SOURCE_DIR})
message("<googletest-download>/. CMAKE_CURRENT_BINARY_DIR: " ${CMAKE_CURRENT_BINARY_DIR})
message("<googletest-download>/. CMAKE_CURRENT_SOURCE_DIR: " ${CMAKE_CURRENT_SOURCE_DIR})
message("<googletest-download>/. googletest-download_BINARY_DIR: " ${googletest-download_BINARY_DIR})
message("<googletest-download>/. googletest-download_SOURCE_DIR: " ${googletest-download_SOURCE_DIR})
ExternalProject_Add(googletest
  GIT_REPOSITORY    https://github.com/google/googletest.git
  GIT_TAG           master
  SOURCE_DIR        "${CMAKE_CURRENT_BINARY_DIR}/googletest-src"
  BINARY_DIR        "${CMAKE_CURRENT_BINARY_DIR}/googletest-build"
  CONFIGURE_COMMAND ""
  BUILD_COMMAND     ""
  INSTALL_COMMAND   ""
  TEST_COMMAND      ""
)
